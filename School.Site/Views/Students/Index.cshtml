@model IEnumerable<School.Entities.Students>

@{
    ViewBag.Title = "Index";
}

<h2>All Students</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.Label("Name")
        </th>
        <th style="width:95px">
            @Html.Label("Address")
        </th>
        <th style="width:70px">
            @Html.Label("Class")
        </th>
        <th style="width:120px">
            @Html.Label("Birth Date")
        </th>
        <th style="width:90px">
            @Html.Label("Gender")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            Class @Html.DisplayFor(modelItem => item.ClassId)
        </td>
        <td>
            @Html.Label("Birthdate", item.Birthdate.ToShortDateString(),new {style="font-weight: initial"})
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.Id,onclick="return DeleteConfirm();"})
        </td>
    </tr>
}

</table>

<script type="text/javascript">
    function DeleteConfirm() {
        //alert("test");
        var result = confirm("Are you sure you want to submit the record?");
        if (result == true) {
            return true;
        }
        else {
            return false;
        }
    }
